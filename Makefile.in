	cd $(dir $(bz2_img_file)) && $(MD5SUM) -b \
	$(notdir $(bz2_img_file)) > $(BUILD_DIR)/dist_md5sum.txt
	cd $(dir $(bz2_img_file)) && $(SHA256SUM) -b \
	$(notdir $(bz2_img_file)) > $(BUILD_DIR)/dist_sha256sum.txt
