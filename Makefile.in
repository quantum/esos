	      -B $(btier_src)/$(notdir $(btier_src)).patch/ -p1 < \
	      $(chroot_build)/misc/$(notdir $(btier_src)).patch; \
	    fi; \
	    $(MAKE) --directory=$(linux_src) KVER=$(kernel_ver)$$i \
	    M=$(btier_src)/kernel/btier modules; \
