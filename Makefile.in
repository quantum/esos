	    $(mlnx_ofed_dir)/makefile; \
	    cd $(mlnx_ofed_dir)/compat && ./autogen.sh; \
	    cd $(mlnx_ofed_dir) && ./configure --prefix=/usr --with-njobs=10 \
	    --kernel-version=$(kernel_ver)$$i --kernel-sources=$(linux_src) \
